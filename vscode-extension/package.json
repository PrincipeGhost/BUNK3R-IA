{
    "name": "bunk3r-ai-extension",
    "displayName": "BUNK3R AI",
    "description": "Integrates BUNK3R AI Chat directly into VS Code Sidebar",
    "version": "0.1.0",
    "publisher": "bunk3r",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "AI",
        "Chat",
        "Productivity"
    ],
    "activationEvents": [
        "onView:bunk3r-sidebar-view"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "bunk3r-sidebar",
                    "title": "BUNK3R AI",
                    "icon": "resources/bunk3r-icon.svg"
                }
            ]
        },
        "views": {
            "bunk3r-sidebar": [
                {
                    "id": "bunk3r-sidebar-view",
                    "name": "BUNK3R Chat",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "bunk3r.refreshChat",
                "title": "Refresh BUNK3R Chat",
                "category": "BUNK3R"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node-fetch": "^2.6.2",
        "@types/node": "^16.11.7",
        "typescript": "^4.9.4",
        "eslint": "^8.31.0"
    }
}