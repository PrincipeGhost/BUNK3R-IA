{
    "name": "bunk3r-ai-extension",
    "displayName": "BUNK3R AI",
    "description": "Integrates BUNK3R AI Chat directly into VS Code Sidebar",
    "version": "0.1.0",
    "publisher": "bunk3r",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "AI",
        "Productivity",
        "Other"
    ],
    "activationEvents": [
        "onView:bunk3r-sidebar-view"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "auxiliarybar": [
                {
                    "id": "chat",
                    "title": "BUNK3R AI",
                    "icon": "$(comment-discussion)"
                }
            ]
        },
        "views": {
            "chat": [
                {
                    "id": "bunk3r-sidebar-view",
                    "name": "BUNK3R Chat",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "bunk3r.refreshChat",
                "title": "Refresh BUNK3R Chat",
                "category": "BUNK3R",
                "icon": "$(refresh)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/node-fetch": "^2.6.2",
        "@types/vscode": "^1.74.0",
        "esbuild": "^0.27.2",
        "eslint": "^8.31.0",
        "typescript": "^4.9.4"
    }
}